# ======================================
# Studio Revenue Manager - Production Environment
# ======================================
# This file is used automatically when running: npm run build
# IMPORTANT: Update all placeholder values before deploying to production
# ======================================

# API Configuration
# REQUIRED: Update to production backend URL
VITE_API_URL=https://api.studiomorph.com
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=Studio Revenue Manager
VITE_APP_VERSION=0.1.0
VITE_APP_ENV=production

# Feature Flags
VITE_FEATURE_CALENDAR=true
VITE_FEATURE_CSV_UPLOAD=true
VITE_FEATURE_DASHBOARD=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_DARK_MODE=true

# Firebase Configuration
# REQUIRED: Replace with your actual Firebase production project credentials
# Get from: https://console.firebase.google.com/ → Project Settings → Web App
VITE_FIREBASE_PROJECT_ID=studio-revenue-manager
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=studio-revenue-manager.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=studio-revenue-manager.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Google Services (Optional)
VITE_GOOGLE_CLIENT_ID=
VITE_GA_MEASUREMENT_ID=

# UI/UX Configuration
VITE_DEFAULT_LANGUAGE=ko
VITE_DEFAULT_CURRENCY=KRW
VITE_DEFAULT_TIMEZONE=Asia/Seoul
VITE_ITEMS_PER_PAGE=20
VITE_CHART_THEME=light

# Performance & Optimization
VITE_ENABLE_SW=true
VITE_API_RETRY_COUNT=3
VITE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE=true

# Development Tools (DISABLED in production)
VITE_USE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=false

# Third-Party Integrations (Optional)
# VITE_SENTRY_DSN=
# VITE_SENTRY_ENVIRONMENT=production
# VITE_SENTRY_SAMPLE_RATE=0.1

# Contact & Support
VITE_SUPPORT_EMAIL=support@studiomorph.com
VITE_HELP_URL=https://docs.studiomorph.com
VITE_TERMS_URL=https://studiomorph.com/terms
VITE_PRIVACY_URL=https://studiomorph.com/privacy
