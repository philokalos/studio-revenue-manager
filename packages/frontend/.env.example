# ======================================
# Studio Revenue Manager - Frontend Configuration
# ======================================

# ======================================
# API CONFIGURATION
# ======================================

# Backend API URL (REQUIRED)
# Development: http://localhost:3000
# Staging: https://api-staging.yourdomain.com
# Production: https://api.yourdomain.com
VITE_API_URL=http://localhost:3000

# API Request Timeout (milliseconds)
# Default: 30000 (30 seconds)
VITE_API_TIMEOUT=30000

# ======================================
# APPLICATION CONFIGURATION
# ======================================

# Application Name (displayed in browser tab and headers)
VITE_APP_NAME=Studio Revenue Manager

# Application Version (displayed in about/help sections)
VITE_APP_VERSION=0.1.0

# Application Environment
# Values: development | staging | production
VITE_APP_ENV=development

# ======================================
# FEATURE FLAGS
# ======================================

# Enable Google Calendar Integration UI
VITE_FEATURE_CALENDAR=true

# Enable CSV Bank Upload Feature
VITE_FEATURE_CSV_UPLOAD=true

# Enable Dashboard Analytics
VITE_FEATURE_DASHBOARD=true

# Enable Reports Section
VITE_FEATURE_REPORTS=true

# Enable Dark Mode Toggle
VITE_FEATURE_DARK_MODE=true

# ======================================
# GOOGLE SERVICES (Optional)
# ======================================

# Google OAuth Client ID (for Google Sign-In)
# Get from: https://console.cloud.google.com/apis/credentials
# Must match backend configuration
VITE_GOOGLE_CLIENT_ID=

# Google Analytics Measurement ID (Optional)
# Format: G-XXXXXXXXXX
# Get from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=

# ======================================
# UI/UX CONFIGURATION
# ======================================

# Default Language
# Supported: en (English), ko (Korean)
VITE_DEFAULT_LANGUAGE=ko

# Default Currency
# Supported: KRW, USD, EUR, JPY
VITE_DEFAULT_CURRENCY=KRW

# Default Timezone
# Examples: Asia/Seoul, America/New_York, Europe/London
VITE_DEFAULT_TIMEZONE=Asia/Seoul

# Items per page for pagination
VITE_ITEMS_PER_PAGE=20

# Chart Theme
# Values: light | dark | auto
VITE_CHART_THEME=light

# ======================================
# PERFORMANCE & OPTIMIZATION
# ======================================

# Enable Service Worker (PWA)
VITE_ENABLE_SW=false

# API Request Retry Count
VITE_API_RETRY_COUNT=3

# Enable Debug Mode (shows console logs)
VITE_DEBUG_MODE=false

# Enable Performance Monitoring
VITE_ENABLE_PERFORMANCE=false

# ======================================
# DEVELOPMENT ONLY
# ======================================

# Mock API Responses (for development without backend)
# WARNING: Only use in development
VITE_USE_MOCK_API=false

# Show Development Tools (React Query Devtools, etc.)
VITE_SHOW_DEV_TOOLS=true

# Enable Hot Module Replacement (HMR)
# Automatically enabled by Vite in development
# VITE_HMR=true

# ======================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ======================================

# Sentry DSN for Error Tracking
# Get from: https://sentry.io/
VITE_SENTRY_DSN=

# Sentry Environment
VITE_SENTRY_ENVIRONMENT=development

# Sentry Sample Rate (0.0 to 1.0)
# 1.0 = 100% of errors tracked
VITE_SENTRY_SAMPLE_RATE=1.0

# ======================================
# CONTACT & SUPPORT
# ======================================

# Support Email
VITE_SUPPORT_EMAIL=support@studiomorph.com

# Help Documentation URL
VITE_HELP_URL=https://docs.yourdomain.com

# Terms of Service URL
VITE_TERMS_URL=https://yourdomain.com/terms

# Privacy Policy URL
VITE_PRIVACY_URL=https://yourdomain.com/privacy

# ======================================
# NOTES
# ======================================
#
# 1. ENVIRONMENT VARIABLES:
#    - All Vite environment variables must be prefixed with VITE_
#    - Variables are statically replaced at build time
#    - Changes require rebuild (npm run build)
#    - Development server auto-restarts on .env changes
#
# 2. REQUIRED VARIABLES:
#    - VITE_API_URL (must point to backend API)
#    All other variables have defaults or are optional
#
# 3. SECURITY NOTES:
#    - DO NOT store secrets in frontend .env (they are exposed to clients)
#    - API keys for frontend use only (rate-limited, restricted)
#    - Sensitive operations should be handled by backend
#    - Never commit .env files to version control
#
# 4. BUILD CONFIGURATION:
#    Development (.env.development):
#      VITE_API_URL=http://localhost:3000
#      VITE_DEBUG_MODE=true
#
#    Production (.env.production):
#      VITE_API_URL=https://api.yourdomain.com
#      VITE_DEBUG_MODE=false
#      VITE_ENABLE_SW=true
#
# 5. ACCESSING IN CODE:
#    import.meta.env.VITE_API_URL
#    import.meta.env.VITE_APP_NAME
#    etc.
#
# 6. PRODUCTION CHECKLIST:
#    □ Set VITE_API_URL to production backend
#    □ Set VITE_APP_ENV=production
#    □ Disable VITE_DEBUG_MODE
#    □ Disable VITE_USE_MOCK_API
#    □ Disable VITE_SHOW_DEV_TOOLS
#    □ Configure error tracking (Sentry)
#    □ Set up analytics (Google Analytics)
#    □ Verify all feature flags
#    □ Test with production API
#
# 7. TROUBLESHOOTING:
#    - Variables not updating? Restart dev server
#    - Variable undefined? Check VITE_ prefix
#    - Different values in dev/prod? Create .env.development and .env.production
#    - See documentation: https://vitejs.dev/guide/env-and-mode.html
#
# ======================================
