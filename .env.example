# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/studio_morph_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# Google Calendar API
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account.json
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com
CALENDAR_SYNC_INTERVAL_HOURS=1

# Email Configuration (Optional for MVP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Studio Morph <noreply@studiomorph.com>

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Studio Morph
VITE_ENABLE_MOCK_DATA=true

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_CALENDAR_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUTO_MATCHING=false
