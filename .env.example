# ==============================================================================
# Studio Revenue Manager - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment Configuration
# ------------------------------------------------------------------------------
NODE_ENV=development
# Options: development, staging, production

# ------------------------------------------------------------------------------
# Firebase Web SDK Configuration (Frontend - Vite)
# ------------------------------------------------------------------------------
# These are safe to expose in client-side code (Vite prefix required)
# Get these from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ------------------------------------------------------------------------------
# Firebase Admin SDK Configuration (Backend - Functions)
# ------------------------------------------------------------------------------
# These are SENSITIVE and should NEVER be exposed to client-side code
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Alternative: Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# ------------------------------------------------------------------------------
# Firebase Emulator Configuration (Local Development)
# ------------------------------------------------------------------------------
# Enable Firebase emulators for local development
FIREBASE_EMULATOR_ENABLED=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Frontend
VITE_APP_NAME="Studio Revenue Manager"
VITE_APP_VERSION=0.1.0
VITE_API_BASE_URL=http://localhost:5001/your_project_id/us-central1

# Backend Functions
FUNCTIONS_REGION=us-central1
FUNCTIONS_TIMEOUT=60s
FUNCTIONS_MEMORY=256MB

# ------------------------------------------------------------------------------
# Google Calendar Integration (Optional)
# ------------------------------------------------------------------------------
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CALENDAR_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:5173/api/calendar/oauth2callback

# Production redirect URI
# GOOGLE_CALENDAR_REDIRECT_URI=https://your-app.web.app/api/calendar/oauth2callback

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
VITE_FEATURE_GOOGLE_CALENDAR=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_DEBUG_MODE=true

# ------------------------------------------------------------------------------
# Security & CORS Configuration
# ------------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
ENABLE_CORS=true

# ------------------------------------------------------------------------------
# Logging & Monitoring
# ------------------------------------------------------------------------------
LOG_LEVEL=debug
# Options: error, warn, info, debug, trace
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_REPORTING=false

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Firestore settings
FIRESTORE_PERSISTENCE=true
FIRESTORE_CACHE_SIZE=40000000

# ------------------------------------------------------------------------------
# Development Tools
# ------------------------------------------------------------------------------
VITE_ENABLE_DEVTOOLS=true
VITE_SOURCE_MAPS=true

# ==============================================================================
# Environment-Specific Examples
# ==============================================================================

# DEVELOPMENT (.env.development)
# NODE_ENV=development
# VITE_API_BASE_URL=http://localhost:5001/dev-project-id/us-central1
# FIREBASE_EMULATOR_ENABLED=true

# STAGING (.env.staging)
# NODE_ENV=staging
# VITE_API_BASE_URL=https://us-central1-staging-project-id.cloudfunctions.net
# FIREBASE_EMULATOR_ENABLED=false

# PRODUCTION (.env.production)
# NODE_ENV=production
# VITE_API_BASE_URL=https://us-central1-prod-project-id.cloudfunctions.net
# FIREBASE_EMULATOR_ENABLED=false
# ENABLE_PERFORMANCE_MONITORING=true
# ENABLE_ERROR_REPORTING=true
